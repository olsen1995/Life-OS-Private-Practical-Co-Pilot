{
  "openapi": "3.1.0",
  "info": {
    "title": "LifeOS Co-Pilot API",
    "version": "1.0.6",
    "description": "Static OpenAPI schema for GPT Actions (ModeRouter runtime truth)."
  },
  "servers": [
    {
      "url": "https://life-os-private-practical-co-pilot.onrender.com",
      "description": "Production server"
    }
  ],
  "components": {
    "schemas": {
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "ok": {
            "type": "boolean"
          },
          "error": {
            "type": "string"
          }
        },
        "required": [
          "ok",
          "error"
        ],
        "additionalProperties": true
      }
    }
  },
  "paths": {
    "/ask": {
      "get": {
        "summary": "Ask a question (query params)",
        "operationId": "askGet",
        "x-openai-isConsequential": false,
        "parameters": [
          {
            "name": "message",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "user_id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "summary": {
                      "type": "string"
                    },
                    "user_id": {
                      "type": "string"
                    },
                    "memory": {
                      "type": "object",
                      "additionalProperties": true
                    }
                  },
                  "additionalProperties": true
                },
                "example": {
                  "summary": "You said: hello",
                  "user_id": "demo",
                  "memory": {
                    "last_message": "hello"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Ask a question (form POST)",
        "operationId": "askPost",
        "x-openai-isConsequential": false,
        "requestBody": {
          "required": true,
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string"
                  },
                  "user_id": {
                    "type": "string"
                  }
                },
                "required": [
                  "message",
                  "user_id"
                ],
                "additionalProperties": false
              },
              "example": {
                "message": "hello",
                "user_id": "demo"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "summary": {
                      "type": "string"
                    },
                    "user_id": {
                      "type": "string"
                    },
                    "memory": {
                      "type": "object",
                      "additionalProperties": true
                    }
                  },
                  "additionalProperties": true
                },
                "example": {
                  "summary": "You said: hello",
                  "user_id": "demo",
                  "memory": {
                    "last_message": "hello"
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          },
          "500": {
            "description": "Server Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ErrorResponse"
                }
              }
            }
          }
        }
      }
    },
    "/memory": {
      "get": {
        "summary": "Retrieve memory for a user",
        "operationId": "memoryGet",
        "x-openai-isConsequential": false,
        "parameters": [
          {
            "name": "user_id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Memory object",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {},
                  "additionalProperties": true
                },
                "example": {
                  "some_key": "some_value"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Write/replace memory for a user (JSON body)",
        "operationId": "memoryPost",
        "x-openai-isConsequential": false,
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "user_id": {
                    "type": "string"
                  },
                  "memory": {
                    "type": "object",
                    "additionalProperties": true
                  }
                },
                "required": [
                  "user_id",
                  "memory"
                ],
                "additionalProperties": false
              },
              "example": {
                "user_id": "demo",
                "memory": {
                  "some_key": "some_value"
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Write result",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": {
                      "type": "boolean"
                    },
                    "written": {
                      "type": "integer"
                    }
                  },
                  "additionalProperties": true
                },
                "example": {
                  "ok": true,
                  "written": 1
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Delete memory for a user",
        "operationId": "memoryDelete",
        "x-openai-isConsequential": false,
        "parameters": [
          {
            "name": "user_id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Delete result (idempotent)",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "ok": {
                      "type": "boolean"
                    },
                    "deleted": {
                      "type": "boolean"
                    }
                  },
                  "additionalProperties": true
                },
                "examples": {
                  "deletedTrue": {
                    "summary": "Memory deleted",
                    "value": {
                      "ok": true,
                      "deleted": true
                    }
                  },
                  "deletedFalse": {
                    "summary": "Memory not found",
                    "value": {
                      "ok": true,
                      "deleted": false
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
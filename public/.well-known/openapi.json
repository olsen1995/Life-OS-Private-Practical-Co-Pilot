{
  "openapi": "3.1.0",
  "info": {
    "title": "LifeOS Co-Pilot API",
    "version": "1.0.2",
    "description": "Minimal OpenAPI schema for GPT Actions"
  },
  "servers": [
    {
      "url": "https://life-os-private-practical-co-pilot.onrender.com"
    }
  ],
  "paths": {
    "/ask": {
      "post": {
        "summary": "Ask a question",
        "operationId": "askQuestion",
        "requestBody": {
          "required": true,
          "content": {
            "application/x-www-form-urlencoded": {
              "schema": {
                "type": "object",
                "properties": {
                  "message": {
                    "type": "string"
                  },
                  "user_id": {
                    "type": "string"
                  }
                },
                "required": [
                  "message",
                  "user_id"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "summary": {
                      "type": "string"
                    },
                    "user_id": {
                      "type": "string"
                    },
                    "memory": {
                      "type": "object",
                      "additionalProperties": true
                    }
                  },
                  "required": [
                    "summary",
                    "user_id",
                    "memory"
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/memory": {
      "get": {
        "summary": "Retrieve memory",
        "operationId": "getMemory",
        "parameters": [
          {
            "name": "user_id",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Memory content",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "description": "Unwrapped memory dictionary",
                  "properties": {},
                  "additionalProperties": true
                }
              }
            }
          }
        }
      }
    }
  }
}
{
  "openapi": "3.1.0",
  "info": {
    "title": "LifeOS Private Practical Co-Pilot API",
    "version": "1.0.0",
    "description": "API for LifeOS Co-Pilot GPT Actions"
  },
  "servers": [
    {
      "url": "https://life-os-private-practical-co-pilot.onrender.com",
      "description": "Render Production Server"
    }
  ],
  "paths": {
    "/ask": {
      "post": {
        "summary": "Ask LifeOS a question",
        "operationId": "askLifeOS",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "prompt": {
                    "type": "string",
                    "description": "User question or instruction"
                  }
                },
                "required": [
                  "prompt"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "LifeOS response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "response": {
                      "type": "string",
                      "description": "Answer from LifeOS"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Missing prompt"
          },
          "401": {
            "description": "Unauthorized"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "ApiKeyAuth": {
        "type": "apiKey",
        "in": "header",
        "name": "x-api-key"
      }
    }
  },
  "security": [
    {
      "ApiKeyAuth": []
    }
  ]
}
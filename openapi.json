{
    "openapi": "3.0.0",
    "info": {
        "title": "Life-OS API",
        "version": "1.0.0",
        "description": "An API for answering prompts via OpenAI."
    },
    "servers": [
        {
            "url": "https://life-os-private-practical-co-pilot.onrender.com"
        }
    ],
    "paths": {
        "/ask": {
            "post": {
                "summary": "Send a prompt to the assistant",
                "operationId": "sendPrompt",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "properties": {
                                    "prompt": {
                                        "type": "string",
                                        "description": "The user's prompt or question"
                                    }
                                },
                                "required": [
                                    "prompt"
                                ]
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "The assistant's response",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "response": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}